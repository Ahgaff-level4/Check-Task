<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/folderItemParent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:paddingHorizontal="@dimen/item_text_vertical_padding">

    <ImageView
        android:id="@+id/folderImageView"
        android:layout_width="@dimen/item_image_size"
        android:layout_height="@dimen/item_image_size"
        android:layout_centerVertical="true"
        android:contentDescription="@string/content_description_folder_image"
        android:src="@drawable/folder"
        app:tint="?attr/colorPrimary" />

    <TextView
        android:id="@+id/folderName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/item_margin_image_to_text"
        android:layout_toStartOf="@+id/folderItemOptionMenuBtn"
        android:layout_toEndOf="@+id/folderImageView"
        android:paddingVertical="4dp"
        android:textColor="?android:textColorSecondary"
        android:text="Folder name asd"
        android:textSize="@dimen/text_xxmiddle_size"
        android:textStyle="bold"
        tools:ignore="HardcodedText">

    </TextView>


    <ImageView
        android:id="@+id/folderItemOptionMenuBtn"
        android:layout_width="30dp"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:clickable="true"
        app:tint="?android:textColorTertiary"
        android:contentDescription="@string/content_description_more_option"
        android:layout_marginTop="5dp"
        android:src="@drawable/more_vert" />

    <TextView
        android:id="@+id/folderFilesCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/folderName"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="32dp"
        android:paddingBottom="1dp"
        android:text="5 files"
        android:textColor="?attr/colorPrimary"
        android:textSize="@dimen/text_small_size"
        tools:ignore="HardcodedText" />

</RelativeLayout>
