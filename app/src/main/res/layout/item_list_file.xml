<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fileItemParent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:paddingHorizontal="@dimen/item_text_vertical_padding">

    <ImageView
        android:id="@+id/fileImageView"
        android:layout_width="@dimen/item_image_size"
        android:layout_height="@dimen/item_image_size"
        android:layout_centerVertical="true"
        android:contentDescription="@string/content_description_folder_image"
        android:src="@drawable/file_description"
        app:tint="@color/purple_500" />

    <TextView
        android:id="@+id/fileName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/item_margin_image_to_text"
        android:layout_toStartOf="@+id/fileItemOptionMenuBtn"
        android:layout_toEndOf="@+id/fileImageView"
        android:paddingVertical="4dp"
        android:text="Folder name asdkf slad kdf lsdk jsdflk sdlf ks."
        android:textSize="@dimen/text_xmiddle_size"
        android:textStyle="bold"
        tools:ignore="HardcodedText">

    </TextView>


    <ImageView
        android:id="@+id/fileItemOptionMenuBtn"
        android:layout_width="30dp"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:clickable="true"
        android:contentDescription="@string/content_description_more_option"
        android:paddingTop="@dimen/item_text_vertical_padding"
        android:src="@drawable/more_vert" />

    <TextView
        android:id="@+id/fileStartReminder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fileName"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="32dp"
        android:paddingBottom="1dp"
        android:text="Tomorrow"
        android:textColor="?attr/colorPrimary"
        android:textSize="@dimen/text_small_size"
        tools:ignore="HardcodedText" />

</RelativeLayout>
